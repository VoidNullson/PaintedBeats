<div class="p-4 bg-teal-400">
  {{#if this.Playback.isPlaying}}

 <button
    class="bg-white p-2 rounded"
    {{on "click" this.Playback.stop}}>
    ❚❚
  </button>

    {{else}}
    <button
       class="bg-white p-2 rounded"
    {{on "click" this.Playback.play}}>
      ⏵
    </button>
  {{/if}}

  <button
  class="p-1 bg-gray-500 rounded"
  {{on "click" this.Playback.decreaseTempo}}>
    -
  </button>
  <span class= "p-2 m-1 bg-gray-200 rounded">
    {{@beat.tempo}}
  </span>
  <button
  class="p-1 m-1 bg-gray-500 rounded"
  {{on "click" this.Playback.increaseTempo}}>
    +
  </button>

  <span class= "p-2 m-1 bg-gray-200 rounded">
    bar [{{this.Playback.onbar}}] step [{{this.Playback.onbeat}}] 16th [{{this.Playback.onsixteenth}}]
  </span>
  [{{this.Playback.tickCount}}]

(interval: {{this.Playback.interval}})

  [{{@beat.name}}]

</div>
